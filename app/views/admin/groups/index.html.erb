<div class="container px-5 px-sm-0">
  <div id="error_explanation">
    <% if @group_new.errors.any? %>
      <%= @group_new.errors.count %>件のエラーが発生しました
    <ul>
      <% @group_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
   <div class="row">
    <div class="col-md-3">
     <h2 class="mt-3">New group</h2>
      <%= form_with model: @group_new, url: admin_groups_path, method: :post  do |f| %>
      <div class="form-group">
        <label for="group_name">Name</label>
        <%= f.text_field :name, class: "form-control group_name" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Group", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Groups</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="col-1"></th>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |groups| %>
          <tr>
            <td><%= groups.name %></td>
            <td><%= link_to "Destroy",admin_group_path(groups.id),method: :delete,class:"btn btn-sm btn-danger", "data-confirm" =>"本当に消しますか？" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>