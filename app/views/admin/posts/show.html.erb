<div class="col-md-8 offset-md-1">
  <h2>投稿詳細</h2>
  <table class="table">
    <tbody>
      <tr>
        <td class="col-4"><%= link_to "画像",user_path(@user) %><br><%= link_to  @user.name,user_path(@user) %></td>
        <td class="col-2"><%= link_to @post.title, admin_post_path(@post.id) %></td>
        <td class="col-2"><%= @post.body %></td>
        <td class="col-2"><%= link_to "Destroy",admin_post_path(@post.id),method: :delete,class:"btn btn-sm btn-danger", "data-confirm" =>"本当に消しますか？" %></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="col-md-8 offset-md-1">
  <p>コメント件数：<%= @post.post_comments.count %></p>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="col-1"></th>
          <th>お名前</th>
          <th>コメント</th>
          <th>コメント日時</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @post.post_comments.each do |post_comment| %>
        <tr>
          <td class="col-1"></td>
          <td><%= post_comment.user.name %></td>
          <td><%= post_comment.body %></td>
          <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= link_to "Destroy", admin_post_posts_comment_path(post_comment.id), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" =>"本当に消しますか？" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>