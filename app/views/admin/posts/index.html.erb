<div class="row">
  <div class="col-md-8 offset-md-1">
    <h2>投稿一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="col-1"></th>
          <th>タイトル</th>
          <th>本文</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |posts| %>
        <tr>
          <td><%= link_to "画像",user_path(posts.user_id) %></td>
          <td><%= link_to posts.title,post_path(posts.id) %></td>
          <td><%= posts.body %></td>
          <td><%= link_to "Destroy",admin_post_path(posts.id),method: :delete,class:"btn btn-sm btn-danger", "data-confirm" =>"本当に消しますか？" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>