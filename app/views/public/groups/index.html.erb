    <div class="col-md-8 offset-md-1">
      <h2>Groups</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="col-2"></th>
            <th>Name</th>
            <th>参加人数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |groups| %>
          <tr>
            <th class="col-2"></th>
            <td><%= link_to groups.name, group_path(groups.id) %></td>
            <td><%= groups.user_and_group.count %></td>
            <td><% if groups.user_and_group.exists?(user_id: current_user.id) %>
                <%= link_to "脱退", user_and_group_path(groups.id), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" =>"脱退しますか？" %>
                <% else %>
                <%= link_to "参加", user_and_groups_path(groups.id), method: :post, class:"btn btn-sm btn-success", "data-confirm" =>"参加しますか？" %>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>