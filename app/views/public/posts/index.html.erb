<div class="row">
  <div class="col-md-8 offset-md-1">
    <h2>投稿一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="col-1"></th>
          <th>タイトル</th>
          <th>本文</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |posts| %>
        <tr>
          <td><%= link_to "画像",user_path(posts.user_id) %></td>
          <td><%= link_to posts.title,post_path(posts.id) %></td>
          <td><%= posts.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3 mt-2">
    <div class="search_form">
      <%= form_with url: posts_path, local: true, method: :get do |f| %>
        <%= f.text_field :title, value: params[:title] %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>