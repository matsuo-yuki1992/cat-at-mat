<% if @post_new.errors.any? %>
  <%= @post_new.errors.count %>件のエラーが発生しました
  <ul>
    <% @post_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
  <div class="col-sm-12">
    <h2 class="mt-3">投稿する</h2>
    <%= form_with model: @post_new do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :genre_id %>
        <%= f.collection_select :genre_id, @genres, :id, :name, { include_blank: "選択して下さい" }, { class: "form-control" } %>
      </div>
      <%= f.submit "投稿", class: "btn btn-success mb-3" %>
    <% end %>
  </div>
</div>
