<div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr><th>name</th><th><%= @user.name %></th></tr>
        </tbody>
      </table>
      <div class="row"><%= link_to edit_user_registration_path(@user), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
      </div>

    
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>マイページ</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="col-1"></th>
          <th>タイトル</th>
          <th>本文</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |posts| %>
        <tr>
          <td><%= link_to "画像",user_path(posts.user_id) %></td>
          <td><%= link_to posts.title,post_path(posts.id) %></td>
          <td><%= posts.body %></td>
          <td><% if @user == current_user %><%= link_to "Edit", edit_post_path(posts.id), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy",post_path(posts.id),method: :delete,class:"btn btn-sm btn-danger", "data-confirm" =>"本当に消しますか？" %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
